<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>

  <appSettings>
    <!-- Replace with your actual Rollbar access token -->
    <add key="Rollbar.AccessToken" value="your-rollbar-access-token-here" />
    <add key="Rollbar.Environment" value="development" />
    <add key="Rollbar.Platform" value="Windows" />
    <add key="Rollbar.Language" value="C#" />
  </appSettings>

  <log4net>
    <appender name="RollbarAppender" type="log4net.Rollbar.RollbarAppender, log4net.Rollbar">
      <!-- Access token can be set here or via AppSettings -->
      <!-- <param name="AccessToken" value="your-token-here" /> -->
      <param name="Environment" value="sample-app" />
      <param name="Asynchronous" value="true" />
    </appender>

    <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
      </layout>
    </appender>

    <root>
      <level value="DEBUG" />
      <appender-ref ref="ConsoleAppender" />
      <appender-ref ref="RollbarAppender" />
    </root>
  </log4net>
</configuration>
